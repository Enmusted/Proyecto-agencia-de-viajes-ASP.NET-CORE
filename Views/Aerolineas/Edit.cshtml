@model AgenciaViajes.Models.Aerolinea

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Aerolínea</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAerolinea" />
            <div class="form-group">
                <label asp-for="Aerolinea1" class="control-label">Aerolínea</label>
                <input asp-for="Aerolinea1" class="form-control" />
                <span asp-validation-for="Aerolinea1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-control" asp-items="ViewBag.Estado"></select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
