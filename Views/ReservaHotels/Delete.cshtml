@model AgenciaViajes.Models.ReservaHotel

@{
    ViewData["Title"] = "Deshabilitar";
}

<h1>Deshabilitar</h1>

<h3>¿Seguro deseas deshabilitar?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Fecha de entrada
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaEntrada)
        </dd>
        <dt class = "col-sm-2">
            Fecha de salida
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaSalida)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class = "col-sm-2">
            DNI
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DniNavigation.Dni)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoNavigation.Estado1)
        </dd>
        <dt class = "col-sm-2">
            Hotel
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdHotelNavigation.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Habitación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdProductoThNavigation.Habitacion)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPrh" />
        <input type="submit" value="Deshabilitar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
