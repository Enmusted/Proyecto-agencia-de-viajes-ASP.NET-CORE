@model IEnumerable<AgenciaViajes.Models.Vendedor>

@{
    ViewData["Title"] = "Vendedores";
}

<h1>Vendedores</h1>

<p>
    <a asp-action="Create">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                Estado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoNavigation.Estado1)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Usuario">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Usuario">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Usuario">Deshabilitar</a>
            </td>
        </tr>
}
    </tbody>
</table>
