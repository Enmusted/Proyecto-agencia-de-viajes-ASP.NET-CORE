@model AgenciaViajes.Models.Detallecompra


@{
    Layout = "_Layoutvendedor";
}

<h1>Eliminar</h1>

<h3>¿Seguro que deseas eliminar?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Número de tarjeta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TarjetaCredito)
        </dd>
        <dt class = "col-sm-2">
            Fecha de vencimiento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TVencimiento)
        </dd>
        <dt class = "col-sm-2">
            CVV
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cvv)
        </dd>
        <dt class = "col-sm-2">
            Fecha de compra
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCompra)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class = "col-sm-2">
            DNI
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DniNavigation.Dni)
        </dd>
        <dt class = "col-sm-2">
            Tour
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdProductoNavigation.IdProducto)
        </dd>
        <dt class = "col-sm-2">
            Reserva vuelo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdRvueloNavigation.IdRvuelo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="NumeroVenta" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
