@model AgenciaViajes.Models.RegistroVuelo

@{
    Layout = "_Layoutvendedor";
}

<h1>Deshabilitar</h1>

<h3>¿Seguro deseas deshabilitar?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Total
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecioT)
        </dd>
        <dt class = "col-sm-2">
            DNI
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DniNavigation.Dni)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoNavigation.Estado1)
        </dd>
        <dt class = "col-sm-2">
            Asiento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdAsientoNavigation.IdAsiento)
        </dd>
        <dt class = "col-sm-2">
            Vuelo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdVueloNavigation.IdVuelo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdRvuelo" />
        <input type="submit" value="Dehabilitar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
