@model AgenciaViajes.Models.RegistroVuelo

@{
    Layout = "_Layoutvendedor";
}

<h1>Detalles</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Total
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecioT)
        </dd>
        <dt class = "col-sm-2">
            DNI
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DniNavigation.Dni)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoNavigation.Estado1)
        </dd>
        <dt class = "col-sm-2">
            Asiento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdAsientoNavigation.IdAsiento)
        </dd>
        <dt class = "col-sm-2">
            ID del vuelo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdVueloNavigation.IdVuelo)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdRvuelo"></a> |
    <a asp-action="Index">Volver</a>
</div>
